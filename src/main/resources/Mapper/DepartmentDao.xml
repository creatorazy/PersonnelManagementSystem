<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pms.dao.DepartmentDao">

    <resultMap type="com.pms.entity.Department" id="DepartmentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="desc" column="desc" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询数据数量-->
    <select id="queryCount" resultType="int">
        select count(*) from pms.department
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="DepartmentMap">
        select
          id, name, 'desc'
        from pms.department
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DepartmentMap">
        select
          id, name, 'desc'
        from pms.department
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DepartmentMap">
        select
          id, name, 'desc'
        from pms.department
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="desc != null and desc != ''">
                and 'desc' = #{desc}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into pms.department(name, 'desc')
        values (#{name}, #{desc})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update pms.department
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="desc != null and desc != ''">
                'desc' = #{desc},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from pms.department where id = #{id}
    </delete>

</mapper>